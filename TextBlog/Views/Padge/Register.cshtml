@model TextBlog.Dtos.UserRegAndLogDto

@{
    ViewData["Title"] = "Регистрация";
}

<h2 class="text-center text-primary">📝 Регистрация</h2>

<form asp-action="Register" asp-controller="Auth" method="post" class="form-container">

    <div class="form-group">
        <label asp-for="Name" class="form-label">Ник</label>
        <input asp-for="Name" class="form-control input-custom" placeholder="Введите ник" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Login" class="form-label">Логин</label>
        <input asp-for="Login" class="form-control input-custom" placeholder="Введите логин" required />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="form-label">Пароль</label>
        <input asp-for="Password" type="password" class="form-control input-custom" placeholder="Введите пароль" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success btn-block">✅ Зарегистрироваться</button>
</form>

<div class="text-center mt-3">
    <a asp-action="Login" asp-controller="Padge" class="login-link">Уже есть аккаунт? Войти</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f4f7fc;
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        max-width: 400px;
        margin: 40px auto;
        padding: 25px;
        border-radius: 12px;
        background-color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .input-custom {
        border-radius: 8px;
        padding: 10px;
        border: 1px solid #ccc;
        transition: all 0.3s ease-in-out;
    }

        .input-custom:focus {
            border-color: #28a745;
            box-shadow: 0 0 8px rgba(40, 167, 69, 0.2);
            outline: none;
        }

    .btn-block {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        transition: background 0.3s ease-in-out;
    }

    .btn-success {
        background: #28a745;
        border: none;
    }

        .btn-success:hover {
            background: #218838;
        }

    .login-link {
        color: #28a745;
        font-weight: bold;
        text-decoration: none;
        transition: color 0.3s;
    }

        .login-link:hover {
            color: #218838;
            text-decoration: underline;
        }
</style>
