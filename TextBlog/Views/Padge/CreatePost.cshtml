@model TextBlog.Dtos.PostDto

@{
    ViewData["Title"] = "Создание поста";
}

<h2 class="text-center">Создание поста</h2>

<form asp-action="CreatePost" asp-controller="Post" method="post" class="form-container">

    <div class="form-group">
        <label asp-for="Hider">Ник</label>
        <input asp-for="Hider" class="form-control" placeholder="Введите заголовок" required />
        <span asp-validation-for="Hider" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text">Логин</label>
        <input asp-for="Text" class="form-control" placeholder="Введите содержание" required />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Опубликовать пост</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 10px;
        background-color: #f8f9fa;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-block {
        width: 100%;
    }
</style>