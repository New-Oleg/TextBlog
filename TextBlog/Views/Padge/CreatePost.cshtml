@model TextBlog.Dtos.PostDto

@{
    ViewData["Title"] = "Создание поста";
}

<h2 class="text-center text-primary">Создание поста</h2>

<form asp-action="CreatePost" asp-controller="Post" method="post" class="form-container">

    <div class="form-group">
        <label asp-for="Hider" class="form-label">Ник</label>
        <input asp-for="Hider" class="form-control input-custom" placeholder="Введите ник" required />
        <span asp-validation-for="Hider" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text" class="form-label">Текст</label>
        <textarea asp-for="Text" class="form-control input-custom" placeholder="Введите содержание" rows="4" required></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block">🚀 Опубликовать пост</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f4f7fc;
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        max-width: 450px;
        margin: 40px auto;
        padding: 25px;
        border-radius: 12px;
        background-color: #ffffff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .input-custom {
        border-radius: 8px;
        padding: 10px;
        border: 1px solid #ccc;
        transition: all 0.3s ease-in-out;
    }

        .input-custom:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
            outline: none;
        }

    .btn-block {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        transition: background 0.3s ease-in-out;
    }

    .btn-primary {
        background: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background: #0056b3;
        }
</style>